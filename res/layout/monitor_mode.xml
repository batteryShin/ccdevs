<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <!--  Client Mode -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#7CDCF5"
	        android:text="Monitor Mode" />
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#D4EEEB" >
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Server IP : " />
	        <EditText
	            android:id="@+id/server_ip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="" />      
	        <Button
	            android:id="@+id/connect_phones"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="connect" />
	    </LinearLayout>
	    
	    <!--  For testing Client Mode_start -->
	    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >
		    <EditText
		        android:id="@+id/message"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="hello~" />
		    <Button
		        android:id="@+id/send_msg"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="Send" />
	    </LinearLayout>
	    <!--  For testing Client Mode_end -->
	</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7CDCF5"
            android:text="Monitoring Condition" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D4EEEB"
            android:orientation="vertical" >
		    <TextView
		        android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8dp"
		        android:text="user can set target(pet) and warning area => alarm when the target is in the warning area" />
            <Button
                android:id="@+id/btn_mode_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pet" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:text="user can set target => alarm when movement occur" />
            <Button
                android:id="@+id/btn_mode_baby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Baby" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:text="alarm when vehicle movement is detected" />
            <Button
                android:id="@+id/btn_mode_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
